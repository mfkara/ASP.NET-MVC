@model MvcApplication5.Models.Firmalar

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Firmalar</legend>

        @Html.HiddenFor(model => model.firmaId)


        <div class="editor-label">
            @Html.LabelFor(model => model.firmaAdi)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.firmaAdi)
            @Html.ValidationMessageFor(model => model.firmaAdi)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.firmaTipi)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.firmaTipi)
            @Html.ValidationMessageFor(model => model.firmaTipi)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.firmaPuani)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.firmaPuani)
            @Html.ValidationMessageFor(model => model.firmaPuani)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.firmaAciklamasi)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.firmaAciklamasi)
            @Html.ValidationMessageFor(model => model.firmaAciklamasi)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.firmaAdresi)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.firmaAdresi)
            @Html.ValidationMessageFor(model => model.firmaAdresi)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.sehirId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.sehirId)
            @Html.ValidationMessageFor(model => model.sehirId)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    <input type="button" class="button" value="Back To List" id="btnNew" onclick="BackToList()" />
</div>
