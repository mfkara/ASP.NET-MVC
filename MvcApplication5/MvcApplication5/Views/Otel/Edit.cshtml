        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.fiyat)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.fiyat)
            @Html.ValidationMessageFor(model => model.fiyat)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.gun)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.gun)
            @Html.ValidationMessageFor(model => model.gun)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.firmaId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.firmaId)
            @Html.ValidationMessageFor(model => model.firmaId)
        </div>

        <p>
