@model MvcApplication5.Models.Araba

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Araba</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.arabaTipi)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.arabaTipi)
            @Html.ValidationMessageFor(model => model.arabaTipi)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.model)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.model)
            @Html.ValidationMessageFor(model => model.model)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.renk)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.renk)
            @Html.ValidationMessageFor(model => model.renk)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.fiyat)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.fiyat)
            @Html.ValidationMessageFor(model => model.fiyat)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.marka)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.marka)
            @Html.ValidationMessageFor(model => model.marka)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.firmaId, "Firmalar")
        </div>
        <div class="editor-field">
            @Html.DropDownList("firmaId", String.Empty)
            @Html.ValidationMessageFor(model => model.firmaId)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    <input type="button" class="button" value="Back To List" id="btnNew" onclick="BackToList()" />
</div>
